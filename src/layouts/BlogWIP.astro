---
import BlogPost from "@/components/BlogPost/BlogPost.astro";
import SubHeading from "@/components/Plugs/SubHeading.astro";
import Layout from "@/layouts/BaseLayout.astro";
import { getCollection, getEntry } from "astro:content";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    minutesRead?: string;
    wip?: boolean;
  };
}

const {
  content: { title, description, pubDate, minutesRead, wip },
} = Astro.props;

const allBlogPosts = await getCollection("traducciones");

const posts = allBlogPosts;

const myFeaturedPost = posts.filter((post) => post.data.featured);
---

<Layout>
  <article>
    <div class="sm:px-12 sm:max-w-3xl w-full mx-auto">
      <h1
        class="mb-4 font-sans text-3xl text-gray-900 dark:text-white font-medium md:text-4xl"
      >
        {title}
      </h1>
      <h2
        class="relative block mb-6 font-sans text-xl md:text-xl text-gray-900 dark:text-white"
      >
        {description}
      </h2>
      {
        wip && (
          <h3 class=" uppercase font-mono text-sm mb-2 text-yellow-400 ">
            Trabajo en proceso
          </h3>
        )
      }
    </div>
    <hr
      class="w-full my-1 sm:px-12 sm:max-w-3xl mx-auto border-t border-gray-300 border-dotted dark:border-gray-600"
    />
    <div
      class="flex items-center w-full sm:px-12 sm:max-w-3xl mx-auto my-3 justify-start text-gray-800 dark:text-gray-300"
    >
      <div class="flex items-center">
        {
          pubDate && (
            <time class="capitalize font-caption text-base ">{pubDate}</time>
          )
        }
      </div>
      <span class="px-4">•</span>
      <div class="text-base font-caption min-w-32 md:mt-0">
        {minutesRead} de lectura
      </div>
    </div>
    <hr
      class="w-full my-1 sm:max-w-3xl sm:px-12 mx-auto border-t border-gray-300 border-dotted dark:border-gray-600"
    />
    <div
      class="w-full pb-12 font-serif prose prose-lg sm:prose-xl hyphens dark:prose-invert max-w-none"
    >
      <slot />
    </div>
  </article>
  <aside class="max-w-3xl sm:px-12 w-full mx-auto">
    <SubHeading title="Más traducciones" link />
    {
      myFeaturedPost.map((post) => (
        <BlogPost
          title={post.data.title}
          description={post.data.description}
          url={`/traducciones/${post.slug}`}
        />
      ))
    }
  </aside>
</Layout>

<style is:global>
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    @apply max-w-3xl lg:px-12 mx-auto text-left;
  }

  .prose h3 {
    @apply md:pr-40 scroll-mt-20;
  }

  .prose a {
    @apply duration-700 hover:text-blue-500;
  }

  .prose ul,
  .prose ol {
    @apply max-w-xl pl-10 pr-4 md:px-4 mx-auto;
  }

  .prose ul p,
  .prose ol p {
    @apply m-0 p-0;
  }

  .prose.hyphens p {
    hyphens: auto;
  }

  .prose blockquote {
    @apply max-w-3xl pr-12 mr-auto text-lg lg:text-2xl md:pr-24 border-l-0;
    @apply transform translate-x-4 hover:opacity-80 duration-300;
  }
  .prose.hyphens blockquote p {
    hyphens: none;
  }
  .prose blockquote {
    @apply font-serif;
  }

  .prose i {
    @apply font-serif;
  }

  .prose em {
    @apply text-xl font-serif;
  }
  .prose p {
    @apply sm:max-w-3xl lg:px-12 mx-auto dark:text-white;
  }

  .prose .anchor {
    @apply absolute invisible no-underline;
    margin-left: -1em;
    padding-right: 0.5em;
    width: 80%;
    max-width: 700px;
    cursor: pointer;
  }

  .anchor:hover {
    @apply visible no-underline;
  }

  .prose .anchor:after {
    @apply text-gray-300 dark:text-gray-700;
    content: "#";
  }

  .prose *:hover > .anchor {
    @apply visible no-underline;
  }

  .prose pre {
    @apply border border-gray-200 bg-gray-50 dark:border-gray-700 dark:bg-gray-900;
  }

  .prose code {
    @apply text-gray-800 dark:text-gray-200 px-1 py-0.5 border border-gray-100 dark:border-gray-800 rounded-md bg-gray-100 dark:bg-gray-900;
  }

  .prose img {
    @apply m-0;
  }

  .prose > :first-child {
    /* Override removing top margin, causing layout shift */
    margin-top: 1.25em !important;
    margin-bottom: 1.25em !important;
  }
</style>
