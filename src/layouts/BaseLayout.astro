---
import BaseHead from "@/components/BaseHead/BaseHead.astro";
import Header from "@/components/Header/Header.astro";
import Footer from "@/components/Footer/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/config";
---

<html lang="es">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="dark">
    <Header />
    <main
      class="flex flex-col relative z-10 justify-center px-4 lg:px-0 pt-24 bg-white dark:bg-gray-900"
    >
      <section
        class="flex flex-col items-start justify-center w-full max-w-full mx-auto mb-16 lg:max-w-3xl"
      >
        <slot />
      </section>
      <Footer />
    </main>
  </body>
</html>
